# ===========================================
# AD File Server Migration - Configuration
# Copy to .env and fill in your values
# ===========================================

# Domain Configuration
DOMAIN_SHORT="YOURDOMAIN"
DOMAIN_REALM="YOURDOMAIN.LOCAL"
DC_PRIMARY="10.0.0.10"
DC_SECONDARY="10.0.0.11"

# VM Configuration
VMID=""                        # Leave empty to auto-detect next available, or set specific ID
VM_NAME="prox-fileserv"
VM_IP="10.0.0.50"
VM_NETMASK="24"
VM_GATEWAY="10.0.0.1"
VM_CORES="4"
VM_RAM="8192"                  # MB
VM_SWAP="2G"                   # Swap size (e.g., 2G, 4G, 0 to disable)

# Proxmox Network Configuration
BRIDGE="vmbr0"
VLAN_TAG=""                    # Leave empty for no VLAN, or set (e.g., "100")
FIREWALL_ENABLED="0"           # 0=disabled, 1=enabled

# Proxmox Storage Configuration
STORAGE_POOL="local-lvm"
OS_DISK_SIZE="32G"
DATA_DISK_SIZE="4000"          # GB, thin provisioned

# Share Configuration
DATA_DISK="/dev/sdb"
SHARE_PATH="/srv/fileshare"
SHARE_NAME="Shared"

# Migration Source (for robocopy)
SOURCE_PATH="E:\\OldFileShare"

# SNMP Monitoring (optional, for 06-harden-security.sh)
SNMP_COMMUNITY="public"        # Change this! SNMP read-only community string
SNMP_LOCATION="Proxmox VM"     # sysLocation OID value
SNMP_CONTACT="Administrator"   # sysContact OID value
